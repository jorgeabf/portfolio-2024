---
interface Props {
  href: string
}
---

<a
  href={Astro.props.href}
  target='_blank'
  rel='noopener noreferrer'
  class='flex items-center gap-2 border border-gray-300 rounded-md px-3 py-2 text-sm font-medium text-gray-400 bg-gray-900 hover:bg-black transition-colors duration-200 ease-in-out'
>
  <slot name='icon' />
  <slot />
</a>
