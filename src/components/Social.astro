---
import GithubIcon from '@/icons/GithubIcon.astro'
import LinkedinIcon from '@/icons/LinkedinIcon.astro'
import MailIcon from '@/icons/MailIcon.astro'
import SocialLink from './SocialLink.astro'
---

<footer class='max-w-3xl w-full mt-auto mx-auto flex flex-wrap gap-4'>
  <SocialLink href='https://github.com/jorgeabf'>
    <GithubIcon
      slot='icon'
      class='size-6'
    />GitHub
  </SocialLink>
  <SocialLink href='https://www.linkedin.com/in/jorge-arce-balluerca/'>
    <LinkedinIcon
      slot='icon'
      class='size-6'
    />LinkedIn
  </SocialLink>
  <SocialLink href='mailto:aportuvas@outlook.es'>
    <MailIcon
      slot='icon'
      class='size-6'
    />Email
  </SocialLink>
</footer>
