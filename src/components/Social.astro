---
import GithubIcon from '@/icons/GithubIcon.astro'
import InfojobsIcon from '@/icons/InfojobsIcon.astro'
import LinkedinIcon from '@/icons/LinkedinIcon.astro'
import MailIcon from '@/icons/MailIcon.astro'
import SocialLink from './SocialLink.astro'
---

<aside class='mt-12 flex flex-wrap gap-4 justify-between'>
  <SocialLink href='https://github.com/jorgeabf'>
    <GithubIcon
      slot='icon'
      class='size-6'
    />GitHub
  </SocialLink>
  <SocialLink href='https://www.linkedin.com/in/jorge-arce-balluerca/'>
    <LinkedinIcon
      slot='icon'
      class='size-6'
    />LinkedIn
  </SocialLink>
  <SocialLink href='mailto:aportuvas@outlook.es'>
    <MailIcon
      slot='icon'
      class='size-6'
    />Email
  </SocialLink>
</aside>
