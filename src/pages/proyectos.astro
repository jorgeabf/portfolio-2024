---
import Layout from '@/layouts/Layout.astro'
import { SITE_TITLE } from '../const'
import PageTitle from '@/components/PageTitle.astro'
import Section from '@/components/Section.astro'
import Badge from '@/components/Badge.astro'
import { Image } from 'astro:assets'

import eguidazuImg from '../assets/eguidazuImg.png'
import autoescuelaImg from '../assets/autoescuelaImg.png'

const PROJECTS = [
  {
    title: 'Club Ajedrez Eguidazu',
    description:
      'Sitio Web con todas las novedades del club de ajedrez Eguidazu, con un diseño moderno y atractivo.',
    link: 'https://www.ajedrezeguidazu.com/',
    github: 'https://www.ajedrezeguidazu.com/',
    image: eguidazuImg,
    tags: [
      { label: 'Astro', color: 'pink' },
      { label: 'Javascript', color: 'yellow' },
      { label: 'HTML', color: 'orange' },
      { label: 'CSS', color: 'blue' }
    ]
  },

  {
    title: 'Autoescuela San Prudencio',
    description:
      'Sitio Web con todas las novedades del club de ajedrez Eguidazu, con un diseño moderno y atractivo.',
    link: 'https://www.ajedrezeguidazu.com/',
    github: '',
    image: autoescuelaImg,
    tags: [
      { label: 'Astro', color: 'pink' },
      { label: 'Javascript', color: 'yellow' },
      { label: 'HTML', color: 'orange' },
      { label: 'CSS', color: 'blue' }
    ]
  }
]
---

<Layout
  title={`Proyectos | ${SITE_TITLE}`}
  description='Mis proyectos y trabajos personales'
>
  <PageTitle>
    Mis últimos proyectos
    <span slot='badge'>Puedes Visitarlos</span>
  </PageTitle>
  <Section>
    {
      PROJECTS.map((project) => (
        <article class='flex flex-col md:flex-row items-center justify-between gap-6 mb-16 last:mb-0'>
          <div class='w-full md:w-1/2'>
            <Image
              src={project.image}
              alt={project.title}
              class='w-full rounded-lg'
              height={300}
            />
          </div>
          <div class='w-full md:w-1/2'>
            <h2 class='text-2xl font-bold mb-2'>{project.title}</h2>
            <p class='text-gray-300 mb-4'>{project.description}</p>
            <div class='flex flex-wrap gap-2'>
              {project.tags.map((tag) => (
                <Badge color={tag.color}>{tag.label}</Badge>
              ))}
            </div>
            <div class='mt-4'>
              <a
                href={project.link}
                target='_blank'
                rel='noopener noreferrer'
                class='text-blue-500 hover:underline mr-4'
              >
                Visitar
              </a>
              {project.github && (
                <a
                  href={project.github}
                  target='_blank'
                  rel='noopener noreferrer'
                  class='text-blue-500 hover:underline'
                >
                  Código fuente
                </a>
              )}
            </div>
          </div>
        </article>
      ))
    }
  </Section>
</Layout>

<style>
  a {
    color: var(--primary-link);
  }
</style>